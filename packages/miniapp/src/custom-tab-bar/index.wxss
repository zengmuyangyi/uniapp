.tab-bar {
  pointer-events: auto;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 177rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  background-image: url('https://pqntourism.pcleartv.cn/FvfsjVTxoMLhiniNfG75KBQG_iDl');
  background-size: 100% 100%;
}
.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-item image {
  width: 50rpx;
  height: 50rpx;
}
.tab-bar-item view {
  font-size: 22rpx;
  line-height: 30rpx;
  margin-top: 13rpx;
}
